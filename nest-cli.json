{
  "language": "ts",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "typeCheck": true,
    "plugins": [
      "@nestjs/swagger/plugin",
      "@nestjs/graphql/plugin"
    ],
    "assets": [
      {
        "include": "/templates/**/*",
        "outDir": "dist"
      }
    ],
    "watchAssets": true
  }  
}